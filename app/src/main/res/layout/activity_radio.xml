<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
               android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RadioButton
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/selector_new_talk_bg"
                android:drawableLeft="@drawable/icon_new_talk_text_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="文字"/>

            <RadioButton
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/selector_new_talk_bg"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_new_talk_picture_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="图片"/>

            <RadioButton
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/selector_new_talk_bg"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_new_talk_file_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="文件"/>

    </RadioGroup>
    <TextView
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@drawable/icon_new_talk_text_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="文字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib"
        android:padding="20dp"
        android:background="@drawable/icon_new_talk_text_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>